extends ../layouts/default

block main
  h1 Articles

block content
  each article in articles
    .article
      a.title(href='/articles/'+article._id, title=article.title) #{article.title}
      p=article.body
      .author
        span= formatDate(article.createdAt, "%b %d, %Y at %I:%M %p")
        &nbsp;&nbsp;
        span Author :&nbsp;

        - var name = article.user.name ? article.user.name : article.user.username

        - console.log(name);

        a(href="/users/"+article.user._id)= name
        &nbsp;&nbsp;
        if (article.tags)
          each tag in article.tags.split(',')
            a.tag(href="/tags/"+tag)
              i.icon-tags
              |  #{tag}

  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)
